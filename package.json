{
  "name": "zesty-finance-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "db:migrate": "dotenvx run -f .env.local -- node ./dist/src/db/migrator.js",
    "db:migrate:create": "npm run db:migrate -- create",
    "db:migrate:down": "npm run db:migrate -- down",
    "db:migrate:up": "npm run db:migrate -- up",
    "db:migrate:latest": "npm run db:migrate -- latest",
    "build": "rm -rf ./dist && tsc",
    "start:dev": "tsc-watch --onSuccess \"dotenvx run -f .env.local -- node ./dist/index.js\"",
    "start:prod": "npm run build && dotenvx run -f .env.production -- ts-node ./dist/index.mjs",
    "test": "mocha ./src/tests/**/*.spec.mjs",
    "test:watch": "npm run test --watch",
    "lint": "eslint",
    "lint:fix": "eslint --fix"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@dotenvx/dotenvx": "^1.36.0",
    "connect-pg-simple": "^10.0.0",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "joi": "^17.13.3",
    "kysely": "^0.27.5",
    "lodash-es": "^4.17.21",
    "node-cache": "^5.1.2",
    "node-fetch": "^3.3.2",
    "pg": "^8.13.3",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@stylistic/eslint-plugin-ts": "^2.10.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.1",
    "@types/node": "^22.13.4",
    "@types/pg": "^8.11.11",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/parser": "^8.24.1",
    "chai": "^5.2.0",
    "eslint": "^9.20.1",
    "globals": "^15.15.0",
    "mocha": "^10.8.2",
    "nodemon": "^3.1.9",
    "tsc-watch": "^6.2.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1"
  }
}